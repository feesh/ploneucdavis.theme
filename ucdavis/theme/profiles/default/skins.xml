<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="UC Davis Theme">

 <object name="ucdavis_theme_custom_images"
    meta_type="Filesystem Directory View"
    directory="ucdavis.theme:skins/ucdavis_theme_custom_images"/>
 <object name="ucdavis_theme_custom_templates"
    meta_type="Filesystem Directory View"
    directory="ucdavis.theme:skins/ucdavis_theme_custom_templates"/>
 <object name="ucdavis_theme_styles"
    meta_type="Filesystem Directory View"
    directory="ucdavis.theme:skins/ucdavis_theme_styles"/>

 <skin-path name="UC Davis Theme" based-on="Plone Default">
  <layer name="ucdavis_theme_custom_images"
     insert-after="custom"/>
  <layer name="ucdavis_theme_custom_templates"
     insert-after="ucdavis_theme_custom_images"/>
  <layer name="ucdavis_theme_styles"
     insert-after="ucdavis_theme_custom_templates"/>
 </skin-path>

</object>
